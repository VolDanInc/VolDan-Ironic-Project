<div class="centered" id="centList">
    <h2 class="editTitle">List of favorites:</h2>

    <div class="media" id="break5">
        {{#each favorites}}
        <div class="topic" id="topicOfList">
            <section class="favorites-list">
                <h4>{{this.title}}</h4>
{{#if this.imageLinks}}
                <img  src={{this.imageLinks}}  />
                {{else}}
                <img src="https://cdn-icons-png.flaticon.com/512/1903/1903162.png" />
                {{/if}}

                <p>Published Date: {{this.publishedDate}}<br />

                    {{#if this.language}}
                    Page count: {{this.pageCount}}<br />
                    Language: {{this.language}}<br />
                    
                    <a href="{{this.previewLink}}">Preview</a> <br />
                    {{else }}
                    Type: {{this.type}}<br />
                    Artist: {{this.author}}<br />
                    <a href="{{this.previewLink}}">Preview</a> <br />
                    
                    {{/if}}
                    <a href="/favorites/{{_id}}/edit">Edit</a>
                </p>

                <form action="/favorites/{{_id}}/delete" method="POST">
                    <button class="deleteBtn">Delete</button>
                </form>
            </section>
        </div>
        {{/each}}
    </div>
</div>