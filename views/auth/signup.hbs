<form action="/auth/signup" method="POST">
   <label> Username or nikname
      <input type="text" name="userName" placeholder="ironhacker" required />
   </label>
   <label> Email
      <input type="text" name="email" placeholder="rockstar@ironhack.com" required />
   </label>
   <label> Password
      <input type="password" name="password" placeholder="*********" required />
   </label>

   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}